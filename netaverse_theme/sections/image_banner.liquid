<div class="image-banner">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url: '2000x' }}" alt="{{ section.settings.heading | escape }}">
  {% endif %}
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}
</div>

{% schema %}
{
  "name": "Image banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "presets": [
    {
      "name": "Image banner"
    }
  ]
}
{% endschema %}
